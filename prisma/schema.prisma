// Keep your existing setup...
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Content {
  id        Int      @id @default(autoincrement())
  text      String
}

// ADD THIS NEW MODEL:
model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}