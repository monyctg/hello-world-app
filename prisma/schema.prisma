generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Content {
  id          Int     @id @default(autoincrement())
  text        String
  subtext     String?
  location    String?
  hourlyRate  String?
  statNumber  String?
  statLabel   String? // e.g. "Job Success"
  aboutTitle  String?
  aboutBody   String?
  imageUrl    String? // e.g. "/me.png"
  upworkLink  String?
  githubLink  String?
}

model Project {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  link        String?
  techStack   String?
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String
}

model Testimonial {
  id      Int    @id @default(autoincrement())
  client  String
  review  String
  rating  String
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  features    String?
  imageUrl    String?
  price       Decimal  @db.Decimal(10, 2)
  demoLink    String?
  createdAt   DateTime @default(now())
  variations  String?  
}

model Order {
  id          Int      @id @default(autoincrement())
  customerName String
  email       String
  total       Decimal
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

// NEW: For Customers who signup on the popup
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}