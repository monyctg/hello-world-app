generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Content {
  id          Int     @id @default(autoincrement())
  text        String  // "Expert WordPress Developer"
  subtext     String? // Your Bio
  location    String? // "Chittagong, Bangladesh"
  hourlyRate  String? // "$50.00/hr"
  statNumber  String? // "100%"
  statLabel   String? // "Job Success"
  aboutTitle  String?
  aboutBody   String?
  imageUrl    String?
  upworkLink  String?
  githubLink  String?
}

model Project {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  link        String?
  techStack   String?
}

// NEW: Store your skills (WordPress, Shopify, etc.)
model Skill {
  id   Int    @id @default(autoincrement())
  name String
}

// NEW: Store your client reviews
model Testimonial {
  id      Int    @id @default(autoincrement())
  client  String // e.g. "Changing primary domain..."
  review  String
  rating  String // "5.0"
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}