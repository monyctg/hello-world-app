generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Content {
  id          Int     @id @default(autoincrement())
  text        String
  subtext     String?
  location    String?
  hourlyRate  String?
  statNumber  String?
  statLabel   String? // e.g. "Job Success"
  aboutTitle  String?
  aboutBody   String?
  imageUrl    String? // e.g. "/me.png"
  upworkLink  String?
  githubLink  String?
}

model Project {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  link        String?
  techStack   String?
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String
}

model Testimonial {
  id      Int    @id @default(autoincrement())
  client  String
  review  String
  rating  String
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}


model Product {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique // SEO friendly URL (e.g. /store/my-plugin)
  description String
  features    String?  // HTML or markdown for features
  imageUrl    String?
  price       Decimal  @db.Decimal(10, 2)
  demoLink    String?
  createdAt   DateTime @default(now())
  
  // Simple variations stored as JSON string for now to keep it simple
  // e.g. [{"name": "Single Site", "price": 49}, {"name": "Unlimited", "price": 199}]
  variations  String?  
}

model Order {
  id          Int      @id @default(autoincrement())
  customerName String
  email       String
  total       Decimal
  status      String   @default("pending") // pending, paid
  createdAt   DateTime @default(now())
  // In a real app, you would link this to specific products
}