generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Content {
  id          Int     @id @default(autoincrement())
  text        String
  subtext     String?
  location    String?
  hourlyRate  String?
  statNumber  String?
  statLabel   String? // e.g. "Job Success"
  aboutTitle  String?
  aboutBody   String?
  imageUrl    String? // e.g. "/me.png"
  upworkLink  String?
  githubLink  String?
}

model Project {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  link        String?
  techStack   String?
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String
}

model Testimonial {
  id      Int    @id @default(autoincrement())
  client  String
  review  String
  rating  String
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}